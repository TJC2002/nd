<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.nd.mapper.UserMapper">

    <resultMap id="UserResultMap" type="com.example.nd.model.User">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="passwordHash" column="password_hash"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="totalSpace" column="total_space"/>
        <result property="usedSpace" column="used_space"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="status" column="status"/>
    </resultMap>

    <resultMap id="DeviceResultMap" type="com.example.nd.model.Device">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="deviceName" column="device_name"/>
        <result property="deviceType" column="device_type"/>
        <result property="deviceIdentifier" column="device_identifier"/>
        <result property="lastLoginIp" column="last_login_ip"/>
        <result property="lastLoginTime" column="last_login_time"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <resultMap id="DeviceLogResultMap" type="com.example.nd.model.DeviceLog">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="deviceId" column="device_id"/>
        <result property="loginIp" column="login_ip"/>
        <result property="loginTime" column="login_time"/>
        <result property="logoutTime" column="logout_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <select id="getUserByUsername" resultMap="UserResultMap">
        SELECT * FROM users WHERE username = #{username}
    </select>

    <select id="getUserById" resultMap="UserResultMap">
        SELECT * FROM users WHERE id = #{id}
    </select>

    <select id="getUserByEmail" resultMap="UserResultMap">
        SELECT * FROM users WHERE email = #{email}
    </select>

    <insert id="insertUser" parameterType="com.example.nd.model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO users (username, password_hash, email, phone, total_space, used_space, status)
        VALUES (#{username}, #{passwordHash}, #{email}, #{phone}, #{totalSpace}, #{usedSpace}, #{status})
    </insert>

    <update id="updateUser" parameterType="com.example.nd.model.User">
        UPDATE users
        SET email = #{email}, phone = #{phone}, updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <update id="updateUserPassword">
        UPDATE users
        SET password_hash = #{passwordHash}, updated_at = CURRENT_TIMESTAMP
        WHERE id = #{userId}
    </update>

    <delete id="deleteUser">
        DELETE FROM users WHERE id = #{userId}
    </delete>

    <update id="updateUsedSpace">
        UPDATE users
        SET used_space = #{usedSpace}, updated_at = CURRENT_TIMESTAMP
        WHERE id = #{userId}
    </update>

    <select id="getTotalSpace" resultType="long">
        SELECT total_space FROM users WHERE id = #{userId}
    </select>

    <select id="getUsedSpace" resultType="long">
        SELECT used_space FROM users WHERE id = #{userId}
    </select>

    <select id="getDeviceById" resultMap="DeviceResultMap">
        SELECT * FROM devices WHERE id = #{id}
    </select>

    <select id="getDeviceByIdentifier" resultMap="DeviceResultMap">
        SELECT * FROM devices WHERE device_identifier = #{deviceIdentifier}
    </select>

    <select id="getDevicesByUserId" resultMap="DeviceResultMap">
        SELECT * FROM devices WHERE user_id = #{userId} ORDER BY created_at DESC
    </select>

    <insert id="insertDevice" parameterType="com.example.nd.model.Device" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO devices (user_id, device_name, device_type, device_identifier, last_login_ip, status)
        VALUES (#{userId}, #{deviceName}, #{deviceType}, #{deviceIdentifier}, #{lastLoginIp}, #{status})
    </insert>

    <update id="updateDevice" parameterType="com.example.nd.model.Device">
        UPDATE devices
        SET device_name = #{deviceName}, last_login_ip = #{lastLoginIp}, status = #{status}
        WHERE id = #{id}
    </update>

    <update id="updateDeviceStatus">
        UPDATE devices SET status = #{status} WHERE id = #{deviceId}
    </update>

    <update id="updateDeviceLoginInfo">
        UPDATE devices
        SET last_login_ip = #{lastLoginIp}, last_login_time = CURRENT_TIMESTAMP, status = 'online'
        WHERE id = #{deviceId}
    </update>

    <delete id="deleteDevice">
        DELETE FROM devices WHERE id = #{deviceId}
    </delete>

    <delete id="deleteDevicesByUserId">
        DELETE FROM devices WHERE user_id = #{userId}
    </delete>

    <select id="getDeviceLogById" resultMap="DeviceLogResultMap">
        SELECT * FROM device_logs WHERE id = #{id}
    </select>

    <select id="getDeviceLogsByUserId" resultMap="DeviceLogResultMap">
        SELECT * FROM device_logs WHERE user_id = #{userId} ORDER BY login_time DESC
    </select>

    <select id="getDeviceLogsByDeviceId" resultMap="DeviceLogResultMap">
        SELECT * FROM device_logs WHERE device_id = #{deviceId} ORDER BY login_time DESC
    </select>

    <insert id="insertDeviceLog" parameterType="com.example.nd.model.DeviceLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO device_logs (user_id, device_id, login_ip, status)
        VALUES (#{userId}, #{deviceId}, #{loginIp}, #{status})
    </insert>

    <update id="updateDeviceLog" parameterType="com.example.nd.model.DeviceLog">
        UPDATE device_logs
        SET logout_time = #{logoutTime}, status = #{status}
        WHERE id = #{id}
    </update>

    <delete id="deleteDeviceLog">
        DELETE FROM device_logs WHERE id = #{id}
    </delete>

    <delete id="deleteDeviceLogsByUserId">
        DELETE FROM device_logs WHERE user_id = #{userId}
    </delete>

    <delete id="deleteDeviceLogsByDeviceId">
        DELETE FROM device_logs WHERE device_id = #{deviceId}
    </delete>

</mapper>